package A0_variables;

public class B0_25_String {

	public static void main(String[] args) {
		/*
		LOS STRING SON OBJ0'S EN JAVA. 
		UN STRING ES UNA SECUENCIA DE CARACTERES, POR LO TANTO ES UN ARREGLO.
		LOS STRINGS SON INMUTABLES: ESTO QUIERE DECIR QUE UN OBJ STTRING NO CAMBIA AL SER MODIFICADO, 
		LO QUE SUCEDE ES QUE SE CREA OTRO Y EL ORIGINAL QUEDA INMUTABLE.

		***MANERA DE SALIR DEL STRING CON \"\"
			STRING TEMA = "MANEJO DE \"STRING\""; 

		LOS STRING NO SON PRIMITIVOS POR LO TANTO UNA DE LAS COSAS QUE NO SE PUEDE HACER ES COMPARAR 2 STRING CON EL ==, 
		YA QUE AUNQUE 2 STRING EAN IGUALES EN SU CADENA, AMBOS STRING OCUPAN LUGARES DIFERENTES EN LA MEMORIA.


		//METODOS DE LA CLASE STRING 
		  
		 char[]toCharArray() : CONVIERTE LA CADENA EN UN ARREGLO DE CARACTERES.
		 String subString(int a, int b) : ESTRAE LA SUB CADENA ENTRE LAS POSICIONES A Y B.
		 String subString(int desde) : EXTRAE LA SUB CADENA DESDE LA POSICIÓN INDICADA.
		 int indexOf(String cadena)  : INDECAN EN QUE POSICIÓN SE ENCUENTRA  EL CARACTER INDICADO POR 1RA VEZ, BUSCANDO DESDE EL PRICIPIO.
		 int lastIndexOf(String cadena) :  INDICA EN QUE POSICIÓN, PERO CONTANDO DESDE EL FINAL DE LA CADENA.
		 boolean startsWith(String prefijo) : DICE SI LA CADENA COMIENZA CON EL PREFIJO INDICADO.
		 boolean endsWith() :  DICE SI LA CADENA TERMINA CON EL SUFIJO INDICADO.
		 String[]split(String patron): DIVIDE LA CADENA EN VARIAS SUBCADENAS, SEGÚN EL PATRON INDICADO EN LOS PARAMETROS.	 
 
		*/

	}

}
